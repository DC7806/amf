<table class="table xs-transform mt-xs-20">
  <thead class="hidden-xs">
    <tr>
      <td class="col-sm-1">日期</td>
      <td class="col-sm-2">稱謂</td>
      <td class="col-sm-2">姓</td>
      <td class="col-sm-2">名</td>
      <td class="col-sm-3">標題</td>
    </tr>
  </thead>
  <tbody >
    <% @admin_inquiries.each do |inquiry|%>
    <tr>
      <td class="col-sm-1"><%= inquiry.created_at.to_date %></td>
      <td class="col-sm-2"><%= inquiry.prefix %></td>
      <td class="col-sm-2"><%= inquiry.last_name %></td>
      <td class="col-sm-2"><%= inquiry.first_name %></td>
      <td class="col-sm-3"><%= inquiry.subject %></td>
      <td class="col-sm-2 text-center">
        <%= link_to admin_inquiry_path(inquiry), class: "btn btn-default" do %>
          <i class="fa fa-chevron-circle-right fa-fw"></i>
        <% end %> 
        <%= link_to admin_inquiry_path(inquiry), method: "delete",
            data: { confirm: "確認刪除?" }, class: "btn btn-danger" do %>
          <i class="fa fa-trash fa-fw"></i>
        <% end %>
      </td>
    </tr>
    <%end%>
  </tbody>
</table>