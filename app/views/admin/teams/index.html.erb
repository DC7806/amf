<%= link_to "Add New", new_admin_team_path, class: "btn btn-default btn-add-new" %>
<table class="table xs-transform mt-xs-20">
  <thead class="hidden-xs">
    <tr>
      <td class="col-sm-1"></td>
      <td class="col-sm-2">圖片</td>
      <td class="col-sm-3">名稱</td>
      <td class="col-sm-4">介紹</td>
    </tr>
  </thead>
  <tbody class="sortable">
    <% @admin_teams.each_with_sortable_id do |team, sortable_id|%>
    <tr id="<%= sortable_id %>">
      <td class="col-sm-1 text-center"><i class="fa fa-arrows fa-2x"></i></td>
      <td class="col-sm-2"><%= admin_index_image team %></td>
      <td class="col-sm-3"><%= team.name %></td>
      <td class="col-sm-4"><%= team.description %></td>
      <td class="col-sm-2 text-center">
        <%= link_to edit_admin_team_path(team), class: "btn btn-primary" do %>
          <i class="fa fa-pencil fa-fw"></i>
        <% end %> 
        <%= link_to admin_team_path(team), method: "delete",
            data: { confirm: "確認刪除?" }, class: "btn btn-danger" do %>
          <i class="fa fa-trash fa-fw"></i>
        <% end %>
      </td>
    </tr>
    <%end%>
  </tbody>
</table>